#include <iostream>
using namespace std;
int main()
{
    int n,x;
    cin >> n >> x;
    int arr[n+1];
    arr[0] =0;
    cin >> arr[1];
    for(int i=2;i<=n;i++){
        int x;
        cin >> x;
        arr[i] = arr[i-1] +x;
    }
    int i =0;
    int j=0;
    int cnt =0;
    while(i<=n && j<=n){
        if(arr[j]-arr[i]==x) {
            cnt++;
            i++;
        }
        else if(arr[j]-arr[i]>x){
            i++;
        }
        else j++;
    }
    printf("%d",cnt);
}
